<div class="container content">
  <div class="row">
    <div class="git-commits col s12 m4 l3">
      <div class="card">
        <h5>Left sidebar</h5>
        <p>Occupy kitsch plaid cornhole tattooed sartorial four dollar toast pour-over. Irony tilde retro, messenger bag hammock gluten-free seitan +1 intelligentsia literally. Chicharrones ramps forage, vegan tousled wayfarers franzen. Biodiesel heirloom migas umami cold-pressed</p>
      </div>
    </div>
    <div class="col s12 m8 l7">
      <div class="card">
        <form action="/post_content" method="post">
          <div class="row">
            <div class="input-field col s10 offset-s1">
              <i class="material-icons prefix">mode_edit</i>
              <textarea id="textarea1" name="content" class="materialize-textarea"></textarea>
              <label for="textarea1">Say something</label>
            </div>
            <div class="col s3 offset-s1">
              <button class="waves-effect waves-light btn" type="submit" name="button"><i class="fa fa-paper-plane fa-lg"></i>  Post</button>
            </div>
          </div>
        </form>
      </div>
      <div class="card">
        <h5>Hello, <%= @user.user_name %></h5>
      </div>
      <% @posts.each do |post| %>
      <% post_user = User.find(post.user_id.to_i) %>
        <div class="card post">
          <span class="card-title"><img class="post_img" src="<%= post_user.profile_picture%>"><h4><%= post_user.user_name %></h4></span>
          <div class="card-content">
            <p><%= post.content %></p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="online-users col l2 hide-on-med-and-down">
      <div class="card">
        <h6>Online users</h6>
        <% @online_users.each do |user| %>
          <i class="fa fa-user"></i><p><%= user.user_name %></p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="hide">
    <% if @users.any? %>
      <% @users.each do |user| %>
        <p><a href="/user/<%= user.id %>"><%= user.user_name %></a></p>
      <% end %>
    <% end %>
    <% if @user.followings.any? %>
      <% @user.followings.each do |following| %>
        <% user = User.find(following.following_id.to_i) %>
        <%= user.user_name %>
      <% end %>
    <% end %>
  </div>
</div>
