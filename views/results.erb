<% if @users.present? %>
  <ul>
    <% @users.each do |user| %>
      <li><a href="/users/<%= user.id %>"><%= user.user_name %></a></li>
    <% end %>
  </ul>
<% else %>
<p>There are no users containing the term(s) <%= params[:query] %>.</p>
<% end %>
<% if @teams.present? %>
  <ul>
    <% @teams.each do |team| %>
      <li><a href="/teams/<%= team.id %>"><%= team.name %></a></li>
    <% end %>
  </ul>
<% else %>
<p>There are no teams containing the term(s) <%= params[:query] %>.</p>
<% end %>
<% if @languages.present? %>
  <% @languages.each do |language| %>
  <ul>
    <% language.users.each do %>
    <li><a href="/users/<%= user.id %>"><%= language.user_name %></a></li>
    <% end %>
  </ul>
  <% end %>
<% else %>
<p>There are no users with languages containing the term(s) <%= params[:query] %>.</p>
<% end %>
