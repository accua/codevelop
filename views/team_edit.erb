<div class="container">
    <div class="card">
      <div class="row">
        <div class="col s12 l12">
          <h2 class="create-team-header">Edit Your Team</h2>
        </div>
      </div>
      <div class="row">
        <div class="col s12 m4">
          <img id="team_logo" src="<%= @team.logo %>" height="200">
          <div class="input-field">
            <input type="text" name="logo_url">
            <label for="logo_url">Enter Logo URL</label>
            <a id="submit_logo" class="btn waves-effect waves-light" name="submit_logo">Upload Image</a>
          </div>
        </div>
        <div class="col s12 m8">
          <div class="row">
            <div class="input-field">
              <input id="team_name" name="team_name" type="text" class="validate">
              <label for="team_name">Team Name</label>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="input-field">
              <textarea id="bio" name="team_bio" class="materialize-textarea"></textarea>
              <label for="bio">Tell us about your vision</label>
              <form action="/teams/<%= @team.id %>/edit" method="post">
                <input name="_method" type="hidden" value="patch">
                <button class="btn waves-effect waves-light" type="submit" name="update_team">Update Team</button>
              </form>
              <form action="/teams/<%= @team.id() %>/delete" method="post">
                <input name="_method" type="hidden" value="delete">
                <button type="submit" class="btn waves-effect waves-light" name="delete_team">Delete Team</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
